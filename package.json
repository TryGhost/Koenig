{
  "private": true,
  "repository": "https://github.com/TryGhost/Koenig",
  "author": "Ghost Foundation",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "eslintIgnore": [
    "**/node_modules/**"
  ],
  "scripts": {
    "dev": "echo \"Implement me!\"",
    "presetup": "yarn",
    "setup": "lerna bootstrap",
    "test:parent": "NODE_ENV=testing c8 --reporter text --reporter cobertura mocha './test/**/*.test.js'",
    "test": "yarn test:parent && lerna run test",
    "lint": "lerna run lint",
    "preship": "yarn test",
    "ship": "lerna publish --git-remote ${GHOST_UPSTREAM:-origin}",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "8.40.0",
    "eslint-plugin-ghost": "2.18.1",
    "husky": "^8.0.3",
    "mocha": "10.2.0",
    "should": "13.2.3",
    "sinon": "15.0.4"
  }
}
