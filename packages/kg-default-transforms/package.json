    "c8": "10.1.3",
    "mocha": "11.7.0",
    "sinon": "17.0.1",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@lexical/list": "0.13.1",
    "@lexical/rich-text": "0.13.1",
    "@lexical/utils": "0.13.1",
    "@tryghost/kg-default-nodes": "1.5.0",
    "lexical": "0.13.1"
  }
