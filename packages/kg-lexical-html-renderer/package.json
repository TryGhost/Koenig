{
  "name": "@tryghost/kg-lexical-html-renderer",
  "version": "1.1.8",
  "repository": "https://github.com/TryGhost/Koenig/tree/main/packages/kg-lexical-html-renderer",
  "author": "Ghost Foundation",
  "license": "MIT",
  "main": "cjs/index.js",
  "module": "es/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "dev": "tsc --watch --preserveWatchOutput --sourceMap",
    "compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "build:clean": "rm -rf ./cjs ./es ./types ./*.tsbuildinfo",
    "build": "yarn compile",
    "prepare": "yarn build:clean && yarn build",
    "pretest": "tsc",
    "test": "yarn test:unit && yarn test:types",
    "test:unit": "NODE_ENV=testing c8 --src cjs --all --check-coverage --lines 96.57 --reporter text --reporter cobertura mocha './test/**/*.test.js'",
    "test:types": "tsc --noEmit",
    "lint": "yarn lint:code && yarn lint:test",
    "lint:code": "eslint *.js lib/ --ext .ts --cache",
    "lint:test": "eslint -c test/.eslintrc.js test/ --ext .js --cache",
    "posttest": "yarn lint"
  },
  "files": [
    "LICENSE",
    "README.md",
    "cjs/",
    "es/",
    "types/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "c8": "9.1.0",
    "jsdom": "^24.0.0",
    "mocha": "10.4.0",
    "prettier": "3.2.5",
    "should": "13.2.3",
    "sinon": "17.0.1"
  },
  "dependencies": {
    "@lexical/clipboard": "0.13.1",
    "@lexical/code": "0.13.1",
    "@lexical/headless": "0.13.1",
    "@lexical/link": "0.13.1",
    "@lexical/list": "0.13.1",
    "@lexical/rich-text": "0.13.1",
    "@tryghost/kg-default-nodes": "1.1.5",
    "@tryghost/kg-default-transforms": "1.1.6",
    "jsdom": "^24.0.0",
    "lexical": "0.13.1"
  }
}
