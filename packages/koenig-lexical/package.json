  "main": "./dist/koenig-lexical.umd.cjs",
  "module": "./dist/koenig-lexical.js",
  "exports": {
    ".": {
      "import": "./dist/koenig-lexical.js",
      "require": "./dist/koenig-lexical.umd.cjs"
    }
